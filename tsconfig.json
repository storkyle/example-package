{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "es2021", "esnext.asynciterable"],
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": false,
    // "types": ["node"],
    "outDir": ".",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@base": ["src/shared/base/index"],
      "@constants": ["src/shared/constants/index"],
      "@enum": ["src/shared/enum/index"],
      "@interfaces": ["src/shared/interfaces/index"],
      "@error": ["src/shared/error/index"],
      "@library": ["src/shared/libs/index"],
      "@utilities": ["src/shared/utilities/index"]
    }
  },
  "exclude": ["node_modules"],
 
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
